<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Hewan.DetailHewan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/red"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dataIDHewan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/acme"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="ID Hewan"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="145dp"/>

            <TextView
                android:id="@+id/txtNamaHewan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:textAlignment="center"
                android:text="Nama Hewan"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="229dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTglLahir"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Tanggal Lahir                 "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>

        <TextView
            android:id="@+id/txtTanggalLahirHewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textIDJenis"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Jenis Hewan"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="337dp" />

        <TextView
            android:id="@+id/txtNamaJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textIDCustomer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Customer          "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="415dp" />

        <TextView
            android:id="@+id/txtNamaCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCreate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Dibuat Pada            "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="459dp" />

        <TextView
            android:id="@+id/dataDibuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textUpdate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Diubah Pada        "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="497dp" />

        <TextView
            android:id="@+id/dataDiedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Dihapus Pada            "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="540dp" />

        <TextView
            android:id="@+id/dataDihapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNIP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="NIP Log ID             "
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="540dp" />

        <TextView
            android:id="@+id/dataNIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="@color/red"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/red"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="293dp"
                tools:layout_editor_absoluteY="654dp"/>

            <Button
                android:id="@+id/btnRestore"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/red"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Restore"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="293dp"
                tools:layout_editor_absoluteY="654dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSoftDelete"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/red"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Delete"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="654dp"/>

            <Button
                android:id="@+id/btnHapusPermanen"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/red"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Delete"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="654dp"/>
        </RelativeLayout>

