<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D72C16"
    android:orientation="vertical"
    tools:context=".View.PenjualanProduk.CartTransaksi.CartProdukShow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/holo_red_dark"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nama Customer"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/namaCustomer_up3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:popupTheme="@style/AppTheme"
                android:spinnerMode="dropdown"
                android:theme="@style/Theme.MaterialComponents.Dialog"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="Produk yang sudah dipesan :"
            android:textAlignment="gravity"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnTambah_up3"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/white"
            android:text="Tambah Produk"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#D72C16">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDiskon"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Total sudah dipotong Diskon 10%"
                android:textAlignment="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="30dp"
                android:padding="2dp"
                android:text="Total Biaya"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/totalBiaya_up3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:padding="2dp"
                android:text="Rp 0,00"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSimpan_up3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/white"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnBatal_up3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/white"
            android:text="Batal Pesan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>