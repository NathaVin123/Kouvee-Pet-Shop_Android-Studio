<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrayLine"
    android:orientation="vertical"
    tools:context=".View.Pengadaan.DaftarProdukPengadaanTertentu.UpdatePengadaanShow">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nama_supplier"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/namaSupplier_up"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:popupTheme="@style/AppTheme"
                android:spinnerMode="dropdown"
                android:theme="@style/Theme.MaterialComponents.Dialog" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:text="Produk yang dipesan :"
            android:textAlignment="gravity"
            android:textColor="#121212" />

        <Button
            android:id="@+id/btnTambah_up"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#000000"
            android:drawableTint="@color/white"
            android:text="Tambah Produk"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:background="@color/red">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSimpan_up"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#000000"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnBatal_up"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#090909"
            android:text="Batal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>