<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Layanan.DetailLayanan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#D72C16"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dataIDLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/acme"
                android:text="id_layanan"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="145dp"/>

            <TextView
                android:id="@+id/txtNamaLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:text="nama_layanan"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="229dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textHarga"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Harga Layanan           "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>

        <TextView
            android:id="@+id/txtHargaLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textIDUkuran"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Ukuran Hewan            "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="337dp"/>

        <TextView
            android:id="@+id/txtNamaUkuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCreate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Create Tanggal                   "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="376dp"/>

        <TextView
            android:id="@+id/dataDibuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textUpdate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Update Tanggal           "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="415dp"/>

        <TextView
            android:id="@+id/dataDiedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDelete"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="Delete Tanggal            "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="459dp"/>

        <TextView
            android:id="@+id/dataDihapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNIP"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/acme"
            android:text="NIP LOG BY        "
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="497dp"/>

        <TextView
            android:id="@+id/dataNIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/acme"
            android:text="DATA"
            android:textColor="#C0B2B5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="295dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#D72C16"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="293dp"
                tools:layout_editor_absoluteY="654dp"/>

            <Button
                android:id="@+id/btnRestore"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#D72C16"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Restore"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="293dp"
                tools:layout_editor_absoluteY="654dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSoftDelete"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#D72C16"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Delete"
                android:layout_marginLeft="35dp"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="654dp"/>

            <Button
                android:id="@+id/btnHapusPermanen"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignWithParentIfMissing="false"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#D72C16"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Delete"
                android:layout_marginLeft="35dp"
                android:textColor="@color/white"
                android:textColorHint="@color/emas"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="654dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>