<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

<!--                <TextView-->
<!--                    android:id="@+id/textView16"-->
<!--                    android:layout_width="305dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:paddingLeft="15dp"-->
<!--                    android:text="Produk Berhasil Masuk"-->
<!--                    android:textColor="@android:color/black"-->
<!--                    android:textSize="14sp" />-->

                <ImageView
                    android:id="@+id/btnExit_tp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="350dp"
                    android:background="@drawable/ic_exit_foreground" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

<!--                    <ImageView-->
<!--                        android:id="@+id/gambar_tp"-->
<!--                        android:layout_width="80dp"-->
<!--                        android:layout_height="80dp"-->
<!--                        android:background="@drawable/logoapp"-->
<!--                        android:scaleType="centerCrop" />-->

                    <TextView
                        android:id="@+id/stok_tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:text="Stok 11 / 10"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nama_tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:text="Shampoo Dog"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/harga_tp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:text="Rp 15.000"
                        android:textColor="#0B0B0B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/min_tp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_minus_foreground" />

                            <EditText
                                android:id="@+id/jumlah_tp"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="number"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/plus_tp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_plus_foreground" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/satuan_tp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Satuan"
                            android:inputType="textPersonName"
                            android:paddingLeft="5dp"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

<!--                <View-->
<!--                    android:id="@+id/view4"-->
<!--                    android:layout_width="2dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@android:color/darker_gray" />-->

                <ImageButton
                    android:id="@+id/btnHapus_tp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_deletes_foreground"
                    android:scaleType="fitStart"
                    android:scaleX="0.8"
                    android:scaleY="0.55" />

            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:padding="2dp"
                android:text="SUBTOTAL"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/subtotal_tp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="2dp"
                android:text="Rp 250.000,00"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSelesai_tp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray"
                android:text="Selesai Pengadaan"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnTambah_tp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:text="Tambah Produk"
                android:textAllCaps="false"
                android:textColor="@color/black" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>