<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragments.PengadaanFragment">

    <ImageView
        android:id="@+id/btnTambahPengadaan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="@drawable/tambahpengadaan"
        android:backgroundTint="@android:color/holo_blue_light"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Tambah Data Pengadaan"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.010"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.300"/>

    <ImageView
        android:id="@+id/btnTampilPengadaan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:background="@drawable/tampilpengadaan"
        android:backgroundTint="@android:color/holo_blue_light"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"/>

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Tampil Data Pengadaan"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.300"/>

</androidx.constraintlayout.widget.ConstraintLayout>